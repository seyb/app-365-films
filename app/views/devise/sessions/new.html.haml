%h2= t('devise.common.sign_in')

= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f|
  .form-group
    = f.label :email, :class => 'col-sm-2 control-label'
    = f.email_field :email, {:autofocus => true, :class => 'form-control input-lg'}
  .form-group
    = f.label :password, :class => 'col-sm-2 control-label'
    = f.password_field :password, :class => 'form-control input-lg'
  .form-group
    = f.submit t('devise.common.sign_in'), :class => 'btn btn-success'

  -if devise_mapping.rememberable?
    .form-group
      = f.check_box :remember_me
      = f.label :remember_me

= render "devise/shared/links"
