%h2= t('devise.common.forgot_your_password?')

= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :class => 'form-horizontal') do |f|
  = devise_error_messages!
  .form-group
    = f.label :email
    = f.email_field :email, :autofocus => true, class: 'form-control input-lg'
  = f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn btn-success'

= render "devise/shared/links"
